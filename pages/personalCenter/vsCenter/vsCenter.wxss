/* pages/personalCenter/vsCenter/vsCenter.wxss */
.titleBox {
  width: 100%;
  text-align: center;
}
.title {
  width: 538rpx;
  height: 149rpx;
  background-image: linear-gradient(#ff1700, #ff1700), linear-gradient(#66ffff, #66ffff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 14rpx 14rpx 4rpx rgba(0, 0, 0, 0.35);
  border-radius: 21rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
  margin: 0 auto;
}
.title p {
  font-family: SourceHanSansCN-Heavy;
  font-size: 65rpx;
  font-weight: bold;
  color: #fdfafa;
}
.headImg {
  width: 176rpx;
  height: 96rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.headImg image {
  width: 100%;
  height: 100%;
  margin: 0;
}
.centerList {
  width: 100%;
  height: 540rpx;
  overflow: auto;
  margin: 109rpx auto;
}
.centerList .tr {
  width: 538rpx;
  height: 90rpx;
  margin: 70rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.centerList .tr view {
  height: 49rpx;
  font-family: SourceHanSansCN-Heavy;
  color: #fdfafa;
  padding: 7rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  overflow: hidden;
  width: 232rpx;
  height: 63rpx;
  font-weight: bold;
}

.centerList .tr view:nth-child(2) {
  font-size: 33rpx;
}
.btn {
  width: 100%;
}
.btn .red-btn {
  font-family: SourceHanSansCN-Heavy;
  font-size: 43rpx;
  font-weight: bold;
  color: #fdfafa;
  float: right;
  margin-right: 72rpx;
  line-height: 63rpx;
}
