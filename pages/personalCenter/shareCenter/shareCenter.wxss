/* pages/personalCenter/shareCenter/shareCenter.wxss */
.titleBox {
  width: 100%;
  text-align: center;
}
.title {
  width: 538rpx;
  height: 149rpx;
  background-image: linear-gradient(#ff1700, #ff1700), linear-gradient(#66ffff, #66ffff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 14rpx 14rpx 4rpx rgba(0, 0, 0, 0.35);
  border-radius: 21rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: row;
  margin: 0 auto;
}
.title p{
  font-family: SourceHanSansCN-Heavy;
  font-size: 65rpx;
  font-weight: bold;
	color: #fdfafa;
}
.headImg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50rpx;
  border: solid 29rpx #f5f5f5;
  box-sizing: border-box;
  overflow: hidden;
}
.title2{
  width: 538rpx;
  margin: 101rpx auto 123rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title2 .red-btn{
  width: 245rpx;
  height: 69rpx;
  font-family: SourceHanSansCN-Heavy;
  font-size: 51rpx;
  font-weight: bold;
	color: #fdfafa;
}
.centerList{
  width: 100%;
  height: 450rpx;
  overflow: auto;
}
.centerList .tr{
  width: 600rpx;
  /* height: 90rpx; */
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.centerList .tr view{
  height: auto;
  font-family: SourceHanSansCN-Heavy;
	font-size: 33rpx;
  color: #fdfafa;
  padding: 7rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
  font-weight: bold;
}
.centerList .tr view:nth-child(1){
  width: 178rpx;
  justify-content: center;
}
.centerList .tr view:nth-child(2){
  width: 393rpx;
  text-align: left;
}
audio{
  width: 100%;
  height: 100%;
  margin: 0;
}