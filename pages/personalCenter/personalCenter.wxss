/* pages/personalCenter/personalCenter.wxss */

.goHome {
  width: 50rpx;
  position: absolute;
  top: 18rpx;
  right: 22rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 25rpx;
  color: #fc1902;
}
.goHome image {
  width: 100%;
  margin: 0;
}

.h1 {
  width: 100%;
  font-family: SourceHanSansCN-Heavy;
  font-size: 51rpx;
  font-weight: bold;
  color: #fe1801;
  text-align: center;
  margin: 0 auto 67rpx auto;
}
.headBox {
  width: 576rpx;
  height: 366rpx;
  background-color: #f8f9f9;
  box-shadow: 0rpx 29rpx 22rpx 5rpx rgba(0, 0, 0, 0.35);
  border-radius: 43rpx;
  margin: 0 auto;
  font-family: SourceHanSansCN-Regular;
  color: #fe1801;
  text-align: center;
  padding: 22rpx;
  box-sizing: border-box;
}
.headImg {
  width: 158rpx;
  height: 158rpx;
  margin: 0 auto;
  border-radius: 50rpx;
  border: solid 29rpx #f5f5f5;
  overflow: hidden;
}
.nickName {
  font-size: 35rpx;
  letter-spacing: 1rpx;
  margin: 10rpx auto 10rpx auto;
}
.time {
  font-size: 29rpx;
}
.btnList {
  width: 100%;
  margin-top: 96rpx;
  padding: 0 56rpx;
  box-sizing: border-box;
}
.btnBox {
  width: 100%;
  height: 111rpx;
  margin-bottom: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
	box-shadow: 0rpx 5rpx 15rpx 3rpx 
		rgba(0, 0, 0, 0.35);
  border-radius: 36rpx;
  padding: 14rpx;
  box-sizing: border-box;
}
.left,.main,.right{
  height: 100%;
  
  display: flex;
  align-items: center;
  justify-content: center;
}
.left {
  width: 80rpx !important;
  height: 80rpx  !important;
  background-color: rgba(255, 167, 191, .1);
  border-radius: 29rpx;
  flex: .17;
}
.main{
  flex: 1;
  flex-direction: column;
  padding-left: 33rpx;
  overflow: hidden;
}
.right{
  flex: .1;
}
.left image {
  width: 36rpx;
  height: 36rpx;
  object-fit: cover;
}
.right image {
  width: 13rpx;
  height: 25rpx;
  object-fit: cover;
  transform:rotate(180deg);
}
.main p{
  font-family: SourceHanSansCN-Regular;
  letter-spacing: 1rpx;
  width: 100%;
  text-align: left;
  display: inline-block;
}
.main p:nth-child(1){
	font-size: 31rpx;
	color: rgba(255, 23, 0, 1);
}
.main p:nth-child(2){
  font-size: 25rpx;
	color: rgba(119, 134, 158, 1);
}
