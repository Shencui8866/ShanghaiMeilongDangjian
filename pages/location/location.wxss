/* pages/location/location.wxss */
.game {
    width: 572rpx;
	height: 377rpx;
    margin: 0rpx auto;
    overflow: hidden;
    text-align: center;
  }
  .title image {
    margin: 34rpx auto 9rpx auto;
    }
    
  .weui-cell__bd {
    width: 158rpx;
	height: 158rpx;
    overflow: hidden;
  }
  .weui-cell__bd image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .weui-cells {
    width: 680rpx;
    margin: 29rpx auto;
  }
  .weui-cell_input {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  .weui-label {
    width: 232rpx;
    height: 63rpx;
    font-size: 29rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .phcolor {
    color: #ffffff;
  }
  .btn {
    width: 649rpx;
    padding: 0 10%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    position: absolute;
    left: 50%;
    z-index: 10;
    bottom: 168rpx;
    text-align: center;
    transform: translateX(-50%);
  }
  .btn button {
    border: 0;
    width: 232rpx;
    height: 63rpx;
    border-radius: 21rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: SourceHanSansCN-Heavy;
    font-size: 45rpx;
    color: #ffffff;
    font-weight: bold;
    background-color: #fe1801;
  }
  .videoMask {
    width: 649rpx;
    height: 364rpx;
    background: rgba(0, 0, 0, 0);
    position: absolute;
    z-index: 5;
  }
  .locaName{
    width: 232rpx;
	height: 63rpx;
	background-color: #fe1802;
    border-radius: 21rpx;
    line-height: 63rpx;
    text-align: center;
    font-family: SourceHanSansCN-Medium;
	font-size: 38rpx;
    color: #fefcfc;
    margin: 43rpx auto;
    position: relative;
  }