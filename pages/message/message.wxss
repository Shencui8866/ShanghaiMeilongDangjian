/* pages/message/message.wxss */

.game {
  width: 433rpx;
  height: 614rpx;
  margin: 100rpx auto;
  overflow: hidden;
}
.games {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.game image{
  width: 100%;
  object-fit: contain;
}
.games image {
  width: 100%;
}
.games p {
  position: absolute;
  top: 150rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  font-family: SourceHanSansCN-Medium;
  font-size: 42rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 58rpx;
  letter-spacing: 0rpx;
  color: #fe1802;
  text-align: center;
  z-index: 5;
}
video {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.weui-cells {
  width: 649rpx;
  margin: 105rpx auto;
}
.weui-cell_input {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.weui-input {
  width: 379rpx;
  height: 63rpx;
  background-color: #fe1802;
  border-radius: 21rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 29rpx;
  line-height: 58rpx;
  color: #fdfafa;
  float: left;
  padding-left: 22rpx;
}
.weui-label {
  width: 232rpx;
  height: 63rpx;
  font-size: 29rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.weui-cell__bd image {
  width: 71rpx;
  height: 100rpx;
}
.phcolor {
  color: #ffffff;
}
.btn {
  width: 649rpx;
  padding: 0 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  left: 50%;
  z-index: 10;
  bottom: 168rpx;
  text-align: center;
  transform: translateX(-50%);
}
.btn button {
  border: 0;
  width: 232rpx;
  height: 63rpx;
  border-radius: 21rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: SourceHanSansCN-Heavy;
  font-size: 45rpx;
  color: #ffffff;
  font-weight: bold;
  background-color: #fe1801;
}
.videoMask {
  width: 649rpx;
  height: 364rpx;
  background: rgba(0, 0, 0, 0);
  position: absolute;
  z-index: 5;
}
