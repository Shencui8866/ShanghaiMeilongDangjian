/* components/scoreMask/scoreMask.wxss */
.mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}
.grade {
  width: 571rpx;
  height: 480rpx;
}
.grade .img {
  width: 571rpx;
  height: 480rpx;
  overflow: hidden;
  object-fit: contain;
  position: absolute;
}
.grade .titles {
  font-family: SourceHanSansCN-Bold;
  font-size: 45rpx;
  letter-spacing: -2rpx;
  color: #ffffff;
  font-weight: bold;
  text-align: center;
  margin-top: 53rpx;
  position: relative;
  z-index: 2;
}
.grade .score {
  font-family: SourceHanSansCN-Regular;
  font-size: 136rpx;
  letter-spacing: -7rpx;
  color: #fdee01;
  text-align: center;
  margin: 0rpx auto 0rpx auto;
  position: relative;
  z-index: 2;
}
.btn {
  padding: 0 10%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.btn .btns {
  border: 0;
  border-radius: 50rpx;
  width: 200rpx;
  height: 51rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: SourceHanSansCN-Heavy;
  font-size: 45rpx;
  letter-spacing: -4rpx;
  color: #fe1801;
  font-weight: bold;
}
