.Box .bg {
  width: 100%;
  height: 100%;
  object-fit: contain;
  position: absolute;
  z-index: -1;
}
.title {
  text-align: center;
  font-family: SourceHanSansCN-Medium;
  font-size: 45rpx;
  letter-spacing: -2rpx;
  color: #ffffff;
  margin: 45rpx auto 34rpx auto;
}

.txt {
  width: 366rpx;
  font-family: SourceHanSansCN-Medium;
  font-size: 27rpx;
  line-height: 58rpx;
  color: #fefefe;
  text-align: center;
  margin:  0 auto;
}
.btn {
  width: 223rpx;
  height: 51rpx;
  border-radius: 50rpx;
  background-color: #ffffff;
  font-family: SourceHanSansCN-Heavy;
  font-size: 45rpx;
  font-weight: bold;
  letter-spacing: -2rpx;
  color: #fc1801;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  position: absolute;
  left: 118rpx;
