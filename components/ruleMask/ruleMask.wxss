/* components/ruleMask/ruleMask.wxss */

.mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.Box {
  width: 478rpx;
	height: 555rpx;
  position: relative;
  margin-top: 3%;
}
